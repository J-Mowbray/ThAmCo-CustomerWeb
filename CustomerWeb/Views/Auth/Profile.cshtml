@model UserProfileViewModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                    {
                        <div class="col-md-2">
                            <img src="@Model.ProfileImage" alt="Profile" class="img-fluid rounded-circle" />
                        </div>
                    }
                    <div class="col-md-10">
                        <h4>@Model.Name</h4>
                        <p class="text-muted">@Model.EmailAddress</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>